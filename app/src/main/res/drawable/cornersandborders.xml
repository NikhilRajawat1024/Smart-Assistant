<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6D0C9E" /> <!-- Set the border color -->
            <corners android:radius="25dp" /> <!-- Set the corner radius of the border -->
        </shape>
    </item>

    <!-- Background with rounded corners -->
    <item
        android:left="2dp"
    android:right="2dp"
    android:top="2dp"
    android:bottom="2dp"
    >
    <shape android:shape="rectangle">
        <solid android:color="#000000" /> <!-- Set the background color of the container -->
        <corners android:radius="25dp" /> <!-- Set the corner radius of the container -->
    </shape>
</item>

    </layer-list>
